{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "pnpm"
  },
  "projects": {
    "ngx": {
      "projectType": "library",
      "root": "libs/ngx",
      "sourceRoot": "libs/ngx/src",
      "prefix": "x",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "prod": {
              "tsConfig": "libs/ngx/tsconfig.lib.prod.json"
            },
            "dev": {
              "tsConfig": "libs/ngx/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "dev"
        },
        "test": {
          "builder": "@angular/build:unit-test",
          "options": {
            "tsConfig": "libs/ngx/tsconfig.spec.json"
          }
        }
      }
    },
    "playground": {
      "projectType": "application",
      "schematics": {},
      "root": "apps/playground",
      "sourceRoot": "apps/playground/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "apps/playground/src/main.ts",
            "tsConfig": "apps/playground/tsconfig.app.json",
            "assets": ["apps/playground/src/assets"],
            "styles": ["apps/playground/src/styles.css"]
          },
          "configurations": {
            "prod": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "dev": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "dev"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "dev": {
              "buildTarget": "playground:build:dev"
            }
          },
          "defaultConfiguration": "dev"
        },
        "test": {
          "builder": "@angular/build:unit-test"
        }
      }
    }
  }
}
